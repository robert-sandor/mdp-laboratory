<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.robertsandor.mdpprojectandroid.LoginActivity">

    <TextView
        android:text="@string/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textTitle"
        android:textAppearance="@android:style/TextAppearance.Material.Display1"
        android:layout_marginTop="51dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/usernameField"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        style="@android:style/Widget.DeviceDefault.EditText"
        android:singleLine="true"
        android:selectAllOnFocus="true"
        android:hint="@string/username"
        android:textAlignment="center"
        android:layout_below="@+id/textTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordField"
        android:hint="@string/password"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        style="@android:style/Widget.DeviceDefault.EditText"
        android:textAlignment="center"
        android:layout_below="@+id/usernameField"
        android:layout_alignStart="@+id/usernameField"
        android:layout_marginTop="28dp" />

    <Button
        android:text="@string/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:elevation="4dp"
        android:layout_below="@+id/passwordField"
        android:layout_alignStart="@+id/passwordField"
        android:layout_marginTop="42dp"
        android:layout_alignEnd="@+id/passwordField" />

    <Button
        android:text="@string/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:elevation="2dp"
        android:layout_below="@+id/loginButton"
        android:layout_alignStart="@+id/loginButton"
        android:layout_marginTop="23dp"
        android:layout_alignEnd="@+id/loginButton" />
</RelativeLayout>
